<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/status"
            android:layout_marginTop="5dp"
            android:layout_height="75dp"
            android:layout_width="75dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/judul"
            android:text="Judul"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/status"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/konsultan"
            android:text="Konsultan"
            android:textSize="12dp"
            android:layout_below="@+id/judul"
            android:layout_toRightOf="@+id/status"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/konsultan"
            android:layout_alignStart="@+id/konsultan"
            android:layout_marginTop="5dp"
            android:textSize="10dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/konsultan"
            android:text="Tanggal" />

        <TextView
            android:id="@+id/waktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/konsultan"
            android:layout_toEndOf="@+id/tanggal"
            android:layout_toRightOf="@+id/tanggal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:textSize="10dp"
            android:layout_marginBottom="5dp"
            android:text="Waktu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/waktu"
            android:layout_alignBottom="@+id/waktu"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:textSize="10dp"
            android:text="last update"
            android:textStyle="italic" />

</RelativeLayout>